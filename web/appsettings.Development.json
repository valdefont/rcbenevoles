{
  "Serilog": {
    "Using":  ["Serilog.Sinks.Literate"],
    "MinimumLevel": {
      "Default" : "Debug",
      "Override": {
        "Microsoft": "Information",
        "System": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "LiterateConsole" },
      { "Name": "File", "Args": { "path": "logs/rcb.log", "rollingInterval": "Day" } },
      { "Name": "Elasticsearch", "Args": { "nodeUris": "http://localhost:9200", "indexFormat": "rcb-{0:yyyy.MM.dd}", "autoRegisterTemplate" : "true", "templateName": "rcb-template" } }
    ],
    "Enrich": ["FromLogContext", "WithThreadId"],
    "Properties": {
		"Application": "rcbenevoles"
    }
  }
}