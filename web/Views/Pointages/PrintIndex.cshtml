@model PrintIndexModel

@{
    ViewData["Title"] = "Détails";
}

<h2>Edition des fiches d'abandon</h2>

@if(Model.Periods.Count == 0) 
{
<div class="alert alert-warning">
    <p>Aucune fiche n'est disponible pour l'édition. Il est possible qu'aucun pointage du bénévole n'ait été effectué sur cette période</p>
</div>
}
else
{
<div class="alert alert-info">
    <p>Sélectionnez la fiche que vous souhaitez éditer</p>
</div>

<div>
    <hr />
    <ul>
        @foreach (var period in Model.Periods)
        {
            if (period.Adresses.Count == 1)
            {
                <li>
                    <a asp-action="Print" asp-route-addressId="@period.Adresses.First().ID" asp-route-period="@period.PeriodId" asp-route-year="@period.Start.Year" target="_blank">Du <strong>@period.Start.ToString("dddd d MMMM")</strong> au <strong>@period.End.ToString("dddd d MMMM yyyy")</strong></a>
                </li>
            }
            else
            {
            <li>
                <span>Du <strong>@period.Start.ToString("dddd d MMMM")</strong> au <strong>@period.End.ToString("dddd d MMMM yyyy")</strong></span>
                <ul>
                @foreach (var adresse in period.Adresses)
                {
                    <li>
                        à l'adresse <a asp-action="Print" asp-route-addressId="@adresse.ID" asp-route-period="@period.PeriodId" asp-route-year="@period.Start.Year" target="_blank">@adresse.GetAdresseComplete(false)</a>
                    </li>
                }
                </ul>
            </li>
            }
        }
    </ul>
</div>
}