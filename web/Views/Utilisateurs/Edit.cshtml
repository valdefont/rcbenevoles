@model dal.models.Utilisateur

@{
    ViewData["Title"] = "Modifier";
}

<h2>Gestion des utilisateurs</h2>

<h3>Modifier l'utilisateur</h3>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="Login" class="control-label required"></label>
                <input readonly="readonly" asp-for="Login" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="CentreID" class="control-label required"></label>
                <select asp-for="CentreID" asp-items="@(new SelectList(ViewBag.Centres, "ID","Nom"))" class="form-control">
                    <option value="">Tous les centres (Super Administrateur)</option>
                </select>
                <span asp-validation-for="CentreID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Modifier" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-link">Retourner à la liste</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
