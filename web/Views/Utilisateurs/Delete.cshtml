@model dal.models.Utilisateur

@{
    ViewData["Title"] = "Supprimer";
}

<h2>Gestion des utilisateurs</h2>

<h3>Confirmez-vous la suppression de l'utilisateur suivant ?</h3>

<div class="alert alert-warning">
    <p>
        Cet utilisateur ne pourra plus se connecter à l'application.
    </p>
</div>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Login)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Login)
        </dd>
        <dt>
            Centre géré
        </dt>
        <dd>
            @if (Model.Centre == null)
            {
                <span>Tous les centres (Super Administrateur)</span>
            }
            else
            {
                @Html.DisplayFor(model => model.Centre.Nom)
            }
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <a asp-action="Index" class="btn btn-link">Retourner à la liste</a>
        <input type="submit" value="Supprimer" class="btn btn-danger" />
        
    </form>
</div>
